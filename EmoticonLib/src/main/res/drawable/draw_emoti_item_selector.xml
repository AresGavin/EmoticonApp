<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="#DCDCDC" />

            <gradient android:angle="270.0" android:endColor="#E2E2E2" android:startColor="#E2E2E2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#E2E2E2" android:startColor="#E2E2E2" />

            <stroke android:width="1.0px" android:color="#DCDCDC" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#FFFFFFFF" android:startColor="#FFFFFFFF" />

            <stroke android:width="1.0px" android:color="#DCDCDC" />
        </shape>
    </item>

</selector>